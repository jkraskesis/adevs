# These are objects from the open modelica project
MODELICA_RUNTIME_HOME=${MODELICA_HOME}/SimulationRuntime/c

MODELICA_OBJS= \
$(METAOBJSPATH) \
$(UTILOBJSPATH) \
$(MATHOBJSPATH) \
$(SOLVEROBJSPATH) \
$(RESULTSOBJSPATH) \
$(SIMOBJSPATH)

#Files for meta folder
